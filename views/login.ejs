        <link href="https://fonts.googleapis.com/css?family=Dancing+Script|Nunito" rel="stylesheet">
        <link rel="stylesheet" href="/css/normalize.css">
        <link rel="stylesheet" href="/css/animate.css">
        <link rel="stylesheet" href="/css/master.css">
        <link rel="stylesheet" href="/css/login.css">
        <title>Training 2018 â€” Vic Lawrence & Associates Limited</title>
    </head>
    <body>
        <div class="banner">
            <div class="tint">
                <nav class="navbar navbar-light">
                    <a class="navbar-brand blogo" href="/">
                        <img class="img-fluid" src="/img/logoc.png" alt="Logo">
                    </a>
                </nav>
                <div class="content-wrapper">
                    <div class="actionButtons">
                        <button type="button" id="staffIdLogin">Login with VLA StaffID</button>
                        <button type="button" id="phoneNumberLogin">Login with phone number</button>
                    </div>
                    <div class="report">
                        <p id="message"></p>
                    </div>
                    <div class="form-body">
                        <form method="POST">
                            <div class="form-group" id="staffIdDiv">
                                <label for="staffId">Staff ID</label>
                                <input type="text" class="form-control" id="staffId" placeholder="Enter your VLA staff ID" required>
                            </div>
                            <div class="form-group" id="phoneNumberDiv">
                                <label for="phoneNumber">Phone number</label>
                                <input type="tel" class="form-control" id="phoneNumber" min="0" placeholder="Enter your phone number" required disabled>
                            </div>
                            <button type="submit" class="mt-3" id="login">Log me in <i class="fa fa-spinner fa-spin" id="spinner"></i> </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
